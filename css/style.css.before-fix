    cursor: pointer;
    padding: 5px;
}

.settings-dropdown {
    display: none;
    position: absolute;
    top: 100%;
    right: 0;
    background: #2a2a2a;
    border: 1px solid #444;
    border-radius: 5px;
    padding: 10px;
    min-width: 150px;
    z-index: 1000;
}

.settings-dropdown.active {
    display: block;
}

.settings-option {
    display: flex;
    justify-content: space-between;
    align-items: center;
