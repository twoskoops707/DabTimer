:root {
    --primary-color: #4CAF50;
    --primary-dark: #388E3C;
    --primary-light: #C8E6C9;
    --secondary-color: #795548;
    --text-primary: #FFFFFF;
    --text-secondary: #CCCCCC;
    --background: #121212;
    --card-background: #1E1E1E;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Open Sans', sans-serif;
    background-color: var(--background);
    color: var(--text-primary);
    height: 100vh;
}

.screen {
    display: none;
    height: 100vh;
    flex-direction: column;
}

.screen.active {
    display: flex;
}

/* Header */
header {
    background-color: var(--card-background);
    color: white;
    padding: 15px 0;
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
}

.logo-small {
    display: flex;
    align-items: center;
    font-family: 'Montserrat', sans-serif;
    font-weight: 600;
}

.logo-small i {
    margin-right: 8px;
    font-size: 1.5rem;
}

.time-display {
    font-size: 1.2rem;
}

/* Main Content */
main {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
}

.tab-content {
    display: none;
}

.tab-content.active {
    display: block;
}

/* Home Screen */
.home-container {
    max-width: 500px;
    margin: 0 auto;
}

.home-header {
    text-align: center;
    margin-bottom: 30px;
    padding: 20px 0;
}

.home-header i {
    font-size: 3rem;
    color: var(--primary-color);
    margin-bottom: 15px;
    display: block;
}

.home-header h1 {
    color: var(--primary-color);
    margin: 10px 0;
    font-size: 2rem;
}

.home-header p {
    color: var(--text-secondary);
    font-size: 1.1rem;
}

.settings-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
    margin-bottom: 30px;
}

.setting-card {
    background: var(--card-background);
    padding: 20px;
    border-radius: 10px;
}

.setting-card h3 {
    color: var(--text-secondary);
    margin-bottom: 15px;
    font-size: 1.1rem;
    text-align: center;
}

.option-buttons {
    display: flex;
    justify-content: center;
    gap: 10px;
    flex-wrap: wrap;
}

.option-btn {
    padding: 10px 15px;
    background: #2a2a2a;
    border: 1px solid #444;
    border-radius: 20px;
    color: var(--text-primary);
    cursor: pointer;
    transition: all 0.3s ease;
    min-width: 80px;
}

.option-btn.active {
    background: var(--primary-color);
    color: white;
    border-color: var(--primary-color);
}

.action-buttons {
    text-align: center;
}

.btn-primary {
    background-color: var(--primary-color);
    color: white;
    border: none;
    padding: 12px 30px;
    border-radius: 30px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
}

.btn-primary.large {
    padding: 15px 30px;
    font-size: 1.2rem;
}

/* Tab Bar */
.tab-bar {
    display: flex;
    justify-content: space-around;
    background-color: var(--card-background);
    padding: 10px 0;
}

.tab-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: none;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    font-size: 0.8rem;
    padding: 5px 10px;
}

.tab-btn.active {
    color: var(--primary-color);
}

.tab-btn i {
    font-size: 1.5rem;
    margin-bottom: 5px;
}
/* Timer Screen Styles */
.timer-container {
    background-color: var(--card-background);
    border-radius: 15px;
    padding: 20px;
    text-align: center;
}

.timer-display {
    margin-bottom: 30px;
}

#timer-mode {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 10px;
}

#timer.digital {
    font-size: 4rem;
    font-weight: 600;
    color: var(--primary-color);
    margin: 20px 0;
}

.progress-container {
